---
import Layout from "../../layouts/Layout.astro";
import { getProductos } from "../../data/productos";

export async function getStaticPaths() {
  const productos = getProductos();

  return productos.map((producto) => ({
    params: { id: producto.id },
    props: { producto },
  }));
}

const { producto } = Astro.props;
---

<Layout>
  <section class="max-w-5xl mx-auto py-16 px-6 grid md:grid-cols-2 gap-12">
    <img
      src={producto.imagen}
      alt={producto.nombre}
      class="w-full h-auto rounded-lg shadow-md"
    />
    <div>
      <h1 class="text-3xl font-serif mb-4">{producto.nombre}</h1>
      <p class="text-pink-500 text-xl font-bold mb-4">€{producto.precio}</p>
      <p class="mb-6 text-gray-700">{producto.descripcion}</p>

      <h2 class="font-semibold mb-2">Flores utilizadas:</h2>
      <ul class="mb-6 list-disc list-inside text-gray-600">
        {producto.flores.map((f) => <li>{f}</li>)}
      </ul>

      <button
        class="bg-pink-400 text-white px-6 py-3 rounded-full hover:bg-pink-500 transition"
      >
        Añadir al carrito
      </button>
    </div>
  </section>
</Layout>
