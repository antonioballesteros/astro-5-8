---
import { Button, buttonVariants } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
import { getCollection, render } from "astro:content";
import { ArrowLeft } from "lucide-astro";

export async function getStaticPaths() {
  const productos = await getCollection("productos");

  return productos.map((producto) => ({
    params: { slug: producto.slug },
    props: { producto },
  }));
}

const { producto } = Astro.props;
const { slug } = Astro.params;
const { data } = producto;
const { Content } = await render(producto);
---

<Layout>
  <div class="container mx-auto px-6 py-4">
    <a
      href="/productos"
      class={buttonVariants({
        variant: "link",
      })}
    >
      <ArrowLeft class="h-5 w-5" />
      Volver a lista de Productos
    </a>
  </div>

  <section
    class="max-w-5xl mx-auto py-16 px-6 grid md:grid-cols-2 gap-12"
    transition:name={`product-${slug}`}
  >
    <img
      src={data.imagen}
      alt={data.nombre}
      width="800"
      height="600"
      class="w-full h-auto rounded-lg shadow-md object-cover"
      transition:name={`product-image-${slug}`}
    />
    <div>
      <h1
        class="text-3xl font-serif mb-4"
        transition:name={`product-title-${slug}`}>{data.nombre}</h1
      >
      <p
        class="text-brand-600 text-xl font-bold mb-4"
        transition:name={`product-price-${slug}`}>€{data.precio}</p
      >

      <article class="mb-6">
        <Content />
      </article>

      <h2 class="font-semibold mb-2">Flores utilizadas:</h2>
      {data.flores.map((flor) => <li>{flor}</li>)}

      <Button className="mt-6" variant="brand" size="lg">
        Añadir al carrito
      </Button>
    </div>
  </section>
</Layout>
